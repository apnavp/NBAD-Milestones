<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <meta charset="UTF-8">
  <title>Login Page</title>
  <link href="/assets/stylesheets/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
  <!-- Header start for Login -->
  <%- include ('partials/header.ejs') %>
  <!-- Header end for Login -->

  <!-- navigation start for Login -->
  <%- include ('partials/navigation.ejs') %>
  <!-- navigation end for Login -->

  <!-- main start for Login -->
  <main>
    <section>
      <header>
        <h2>Login</h2>
      </header>
      <%if(!Success){%>
        <div class="alert alert-danger alert-dismissible fade in div_login">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong>Alert!</strong> &nbsp Either username or password are incorrect. Please try again.
        </div>
        <%}%>
      <form id="contact-for" class="form_nc" method="POST" action="login">
        <div class="form_format">
          <div class="form_div">
            <label id="Login">Username</label>
            <input type="text" name="login" placeholder="email address here">
            <% if(pageData[0]) { %>
              <div class="alert alert-danger">
              <%= pageData[0].msg %>
              </div>
            <% } %>
          </div>
          <div class="form_div">
            <label id="Password">Password</label>
            <input type="password" name="password" placeholder="Password">
            <% if(pageData[1]) { %>
              <div class="alert alert-danger">
              <%= pageData[1].msg %>
              </div>
            <% } %>
          </div>
          <div class="form_div">
            <input type="submit" class="submit_bttn" value="Log In" />
          </div>
        </div>
      </form>
    </section>
  </main>
  <!-- main end for Login -->

  <!-- footer start for Login -->
  <%- include ('partials/footer.ejs') %>
  <!-- footer end for Login -->
</body>

</html>