<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Connection</title>
  <link href="/assets/stylesheets/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
  <!-- Header start for Connection -->
  <%- include ('partials/header.ejs') %>
  <!-- Header end for Connection -->

  <!-- navigation start for Connection -->
  <%- include ('partials/navigation.ejs') %>
  <!-- navigation end for Connection -->

  <!-- main start for Connection -->
  <main>
    <div class="conn_sections">
      <div class="conn_left">
        <div>


          <header>
            <h3> <%=qs.connection_name%> </h3>
          </header>
        </div>
        <div class="conn_highlight"> <img src=<%=qs.imageurl%> width="100" height="100" alt="man image">
          <div>
            <p>Hosted by : <%=qs.hosted_by%> </p>
            <p>Date : <%=qs.date_and_time%> </p>
            <p>Start location : <%=qs.start_location%> </p>
          </div>
        </div>
        <div class="div_details">
          <header>
            <h3> Details</h3>
          </header>
          <div class="conn_details_p">
            <p><%=qs.details%> </p>

          </div>
        </div>
      </div>
      <div>
        <p>Are you Interested? 6 slots left</p>
        <button class="conn_button1" onclick="window.location.href = 'savedConnections';">Yes</button>
        <button class="conn_button2" onclick="window.location.href = 'savedConnections';">No</button>
        <button class="conn_button3" onclick="window.location.href = 'savedConnections';">Maybe</button>
      </div>
    </div>
  </main>
  <!-- main end for Connection -->

  <!-- footer start for Connection -->
  <%- include ('partials/footer.ejs') %>
  <!-- footer end for Connection -->

</body>

</html>